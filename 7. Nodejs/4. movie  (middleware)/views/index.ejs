<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sidebar and Header with Bootstrap</title>
  <!-- remixicon -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.css"
    integrity="sha512-OQDNdI5rpnZ0BRhhJc+btbbtnxaj+LdQFeh0V9/igiEPDiWE2fG+ZsXl0JEH+bjXKPJ3zcXqNyP4/F/NegVdZg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <!-- bootsrtap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <!-- dropdown multiple select -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-css/1.4.6/select2-bootstrap.min.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/css/select2.min.css" rel="stylesheet" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.2.1/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/js/select2.min.js"></script>
  <!-- image -->
  <script src="https://www.dukelearntoprogram.com/course1/common/js/image/SimpleImage.js"></script>

  <style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap");
    @import url('https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }

    p {
      font-size: 12pt;
      color: black;
    }

    canvas {
      height: 150px;
      width: 300px;
      border: 1px solid gray;
      margin: auto;
    }

    #wrapper {
      display: flex;
      min-height: 100vh;
    }

    #sidebar-wrapper {
      width: 220px;
      flex-shrink: 0;
    }

    #page-content-wrapper {
      flex-grow: 1;
    }

    .navbar {
      padding: 15px 15px;
    }
  </style>
</head>

<body>
  <div class="d-flex" id="wrapper">
    <!-- Sidebar -->
    <div class="bg-dark text-white text-center" id="sidebar-wrapper">
      <div class="sidebar-heading py-4" style="font-size: 40px; font-weight: 500;">Movies</div>
      <div class="list-group list-group-flush">
        <a href="/" class="list-group-item list-group-item-action bg-info text-dark fs-5 fw-bold mb-2">Add to List</a>
        <a href="movieList" class="list-group-item list-group-item-action bg-info text-dark fs-5 fw-bold">Movie-List</a>
      </div>
    </div>

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link bg-dark text-light" href="/"
                  style="padding-right: 20px; font-size: 18px; font-weight: 500;">Add to List</a>
              </li>
              <li class="nav-item">
                <a class="nav-link bg-dark text-light" href="movieList"
                  style="padding-right: 20px; font-size: 18px; font-weight: 500;">Movie-List</a>
              </li>
            </ul>
            <form class="d-flex justify-content-end align-items-center">
              <input class="form-control me-3" type="search" placeholder="Search" style="width: 500px;">
              <button class="btn btn-outline-light me-5 bg-info" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
      <!-- form -->
      <div class="container-fluid">
        <div class="container form-container" style="margin-top: 10px;">
          <div class="row justify-content-center">
            <div class="col-md-8">
              <div class="card" style="width: 700px;">
                <div class="card-header fs-4 fw-bold" style="text-align: center; background-color: #0dcaf0;">
                  Add Movie Details
                </div>
                <div class="card-body">
                  <form action="/signup" method="post" style="font-weight: bold;" enctype="multipart/form-data">
                    <div class="row mb-1">
                      <div class="card">
                        <h5 style="font-weight: 600;">Upload Files :</h5>
                        <canvas id="canv1" ></canvas>
                        <input type="file" multiple="false" accept="image/*" id=finput onchange="upload()"
                          style="margin: 10px 0px 10px 230px;">
                      </div>
                    </div>
                    <div class="row mb-1">
                      <label for="inputname" class="col-sm-2 col-form-label mt-2" style="font-size: 15px;">Movie Name:
                      </label>
                      <div class="col-sm-10" style="margin-top: 14px;">
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter Movie Name">
                      </div>
                    </div>
                    <div class="row mb-1">
                      <label for="inputdsc" class="col-sm-2 col-form-label" style="font-size: 15px;">About The Movie:
                      </label>
                      <div class="col-sm-10 mt-2">
                        <textarea name="dsc" id="dsc" class="form-control" placeholder="Enter About the Movie" cols="74"
                          rows="4"></textarea>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputdate" class="col-sm-2 col-form-label" style="font-size: 15px;">Release Date :
                      </label>
                      <div class="col-sm-5" style="margin-top: 14px;">
                        <input type="date" class="form-control" id="date" name="date" placeholder="Enter Release Date">
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputgenres" class="col-sm-2 col-form-label"
                        style="font-size: 15px; margin-left: 8px;">Movie Genres : </label>
                      <div class="col-sm-9" style="margin-top: 14px;">
                        <select class="js-select2" name="genres[]" multiple class="form-control col-sm-12">
                          <option value="">Choose a Movie Genres</option>
                          <% let genres=["Drama","Romance","Horror","Comedy","Fiction","Action"] %>
                            <% genres.map((val)=>{ %>
                              <option value="<%= val %>">
                                <%= val %>
                              </option>
                              <% }) %>
                        </select>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputrate" class="col-sm-2 col-form-label"
                        style="font-size: 15px; margin-left: 8px;">Movie Rating : </label>
                      <div class="col-sm-9" style="margin-top: 14px;">
                        <select id="multiple-checkboxes" name="rate" class="col-sm-12 p-1 form-control">
                          <option value="">Choose a Rating</option>
                          <% let rate=["⭐","⭐⭐","⭐⭐⭐","⭐⭐⭐⭐","⭐⭐⭐⭐⭐"] %>
                            <% rate.map((val)=>{ %>
                              <option value="<%= val %>">
                                <%= val %>
                              </option>
                              <% }) %>
                        </select>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputprice" class="col-sm-2 col-form-label"></label>
                      <div class="col-sm-10">
                        <input type="submit" value="Submit" class="btn"
                          style="background-color: #0dcaf0; color: black; font-weight: 600;margin-left: 10px;">
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap js -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
  <!-- image -->
  <script>
    function upload() {
      var imgcanvas = document.getElementById("canv1");
      var fileinput = document.getElementById("finput");
      var image = new SimpleImage(fileinput);
      image.drawTo(imgcanvas);
    }
  </script>
  <!-- dropdown -->
  <script>
    $(".js-select2").select2({
      closeOnSelect: false,
      placeholder: "Select Movie Genres",
      allowHtml: true,
      allowClear: true,
      tags: true
    });
  </script>

</body>

</html>